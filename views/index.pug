extends template/content

block content
  div(class="container expand")
    div(class="list expand")
      div(class="list-header")
        a(href="/notes/new")
          i(class="far fa-sticky-note")
          |
          |Crear nueva nota
      each note in notes
        a(href="/notes/"+note._id class="note"+ (currentNote && currentNote._id.equals(note._id) ? ' active' : ''))
          h3(class="note-title")= note.title
          p(class="note-body")= note.truncateBody()
    div(class="body")
      block body

